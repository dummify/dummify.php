<?xml version="1.0" encoding="UTF-8"?>
<phpunit
  backupGlobals="false"
  bootstrap="./vendor/autoload.php"
  colors="true"
  stopOnFailure="false">
  <testsuites>
    <testsuite name="setup">
      <file>tests/setup.php</file>
    </testsuite>    
    <testsuite name="unit">
      <directory suffix=".php">tests/unit/</directory>
    </testsuite>    
    <testsuite name="e2e">
      <directory suffix=".php">tests/e2e/</directory>
    </testsuite>
  </testsuites>
</phpunit>